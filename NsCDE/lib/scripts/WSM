Widget 40
Property
    Flags NoReliefString Hidden
    Position 0 0
    Size 32 32
    Type PushButton
    Title {}
    Main
    Case message of
    10 :
       Begin
          Set $DeskPageStr = (LastString)

          Set $CurrDesk = (Add (StrCopy $DeskPageStr 1 1) 1)
          Set $CurrPage = (StrCopy $DeskPageStr 2 3)

          For $deskiter = 1 To $DeskNo Do
          Begin
             If $deskiter == $CurrDesk Then
             Begin
                If (GetValue $deskiter) == 0 Then
                Begin
                   If $deskiter == 1 Then
                      ChangeColorset $deskiter 41
                   If $deskiter == 2 Then
                      ChangeColorset $deskiter 43
                   If $deskiter == 3 Then
                      ChangeColorset $deskiter 45
                   If $deskiter == 4 Then
                      ChangeColorset $deskiter 47
                   If $deskiter == 5 Then
                      ChangeColorset $deskiter 41
                   If $deskiter == 6 Then
                      ChangeColorset $deskiter 43
                   If $deskiter == 7 Then
                      ChangeColorset $deskiter 45
                   If $deskiter == 8 Then
                      ChangeColorset $deskiter 47

                   ChangeValue $deskiter 1
                End
             End
             Else
             Begin
                If (GetValue $deskiter) == 1 Then
                Begin
                   If $deskiter == 1 Then
                      ChangeColorset $deskiter 40
                   If $deskiter == 2 Then
                      ChangeColorset $deskiter 42
                   If $deskiter == 3 Then
                      ChangeColorset $deskiter 44
                   If $deskiter == 4 Then
                      ChangeColorset $deskiter 46
                   If $deskiter == 5 Then
                      ChangeColorset $deskiter 40
                   If $deskiter == 6 Then
                      ChangeColorset $deskiter 42
                   If $deskiter == 7 Then
                      ChangeColorset $deskiter 44
                   If $deskiter == 8 Then
                      ChangeColorset $deskiter 46

                   ChangeValue $deskiter 0
                End
             End
          End

          # Clever way of naming pager icon for changing it without much of if-else
          If $IconOnBtn == 1 Then
          Begin
             Set $IconName = {NsCDE/Wsm_} $PagesXY {_} $CurrPage {.xpm}
             ChangeIcon 42 $IconName
          End
          Do {SendToModule PGM SendString 1 1 $[page.nx]$[page.ny]}

          If $DeskNo < 4 Then
          Begin
             If $CurrDesk == {1} Then
             Begin
                ChangePosition 42 228 8
             End
             If $CurrDesk == {2} Then
             Begin
                ChangePosition 42 228 40
             End
          End
          Else
          Begin
             If $DeskNo == 4 Then
             Begin
                If $CurrDesk == {1} Then
                Begin
                   ChangePosition 42 98 9
                End
                If $CurrDesk == {2} Then
                Begin
                   ChangePosition 42 228 9
                End
                If $CurrDesk == {3} Then
                Begin
                   ChangePosition 42 98 41
                End
                If $CurrDesk == {4} Then
                Begin
                   ChangePosition 42 228 41
                End
             End
          End
  End
End

Widget 41
Property
    Flags NoReliefString Hidden
    Position 1 3
    Size 124 0
    Type TextField
    Title {}
    Flags Left
    Colorset 20
    Main
       Case message of
       1 :
       Begin
          If $DeskNo == 2 Then
          Begin
             # Hide buttons 3-4 - Resize and move remaining
             HideWidget 3
             HideWidget 4
             HideWidget 23
             HideWidget 24

             ChangeIcon 21 NsCDE/WSM2BackBtn1.xpm
             ChangeIcon 22 NsCDE/WSM2BackBtn2.xpm
             ChangeSize 1 253 26
             ChangeSize 21 255 28
             ChangeSize 2 253 26
             ChangeSize 22 255 28
             ChangePosition 2 1 36
             ChangePosition 22 0 35
          End

          If $DeskNo == 4 Then
          Begin
          End

          If $DeskNo == 6 Then
          Begin
             # Buttons 1-4 - Resize and move existing
             # Show additional two
             ChangeSize 1 82 26
             ChangeSize 2 82 26
             ChangeSize 3 82 26
             ChangeSize 4 82 26
             ChangePosition 2 87 3
             ChangePosition 3 173 3
             ChangePosition 4 1 36

             ShowWidget 5
             ShowWidget 6
             ChangeSize 5 82 26
             ChangeSize 6 82 26
             ChangePosition 5 87 36
             ChangePosition 6 173 36

             # Shadows 1-4 - Resize and move existing 
             # Show additional two
             ChangeIcon 21 NsCDE/WSM6BackBtn1.xpm
             ChangeIcon 22 NsCDE/WSM6BackBtn2.xpm
             ChangeIcon 23 NsCDE/WSM6BackBtn3.xpm
             ChangeIcon 24 NsCDE/WSM6BackBtn4.xpm
             ChangeSize 21 84 28
             ChangeSize 22 84 28
             ChangeSize 23 84 28
             ChangeSize 24 84 28
             ChangePosition 22 86 2
             ChangePosition 23 172 2
             ChangePosition 24 0 35

             ShowWidget 25
             ShowWidget 26
             ChangeSize 25 84 28
             ChangeSize 26 84 28
             ChangePosition 25 86 35
             ChangePosition 26 172 35

             # Hide icon page indicator, buttons are now too small for title and icon
             HideWidget 42
          End

          If $DeskNo == 8 Then
          Begin
             # Shadows 1-4 - Resize and move existing 
             # Show additional four
             ChangeSize 1 60 26
             ChangeSize 2 60 26
             ChangeSize 3 60 26
             ChangeSize 4 60 26
             ChangeSize 5 60 26
             ChangeSize 6 60 26
             ChangeSize 7 60 26
             ChangeSize 8 60 26
             ChangePosition 2 65 3
             ChangePosition 3 130 3
             ChangePosition 4 194 3

             ShowWidget 5
             ShowWidget 6
             ShowWidget 7
             ShowWidget 8

             # Buttons 1-4 - Resize and move existing
             # Show additional four
             ChangeIcon 21 NsCDE/WSM8BackBtn1.xpm
             ChangeIcon 22 NsCDE/WSM8BackBtn2.xpm
             ChangeIcon 23 NsCDE/WSM8BackBtn3.xpm
             ChangeIcon 24 NsCDE/WSM8BackBtn4.xpm
             ChangeIcon 25 NsCDE/WSM8BackBtn1.xpm
             ChangeIcon 26 NsCDE/WSM8BackBtn2.xpm

             ChangeSize 21 62 28
             ChangeSize 22 62 28
             ChangeSize 23 62 28
             ChangeSize 24 62 28
             ChangeSize 25 62 28
             ChangeSize 26 62 28
             ChangeSize 27 62 28
             ChangeSize 28 62 28
             ChangePosition 22 64 2
             ChangePosition 23 129 2
             ChangePosition 24 193 2

             ShowWidget 25
             ShowWidget 26
             ShowWidget 27
             ShowWidget 28

             # Hide icon page indicator, buttons are now too small for title and icon
             HideWidget 42
          End
       End

       2 : 
       Begin
          If $DeskNo == 2 Then
          Begin
             ChangeSize 41 253 26

             If $CurrDesk == 1 Then
             Begin
                ChangePosition 41 1 3
                ChangeColorset 1 20
             End
             If $CurrDesk == 2 Then
             Begin
                ChangePosition 41 1 36
                ChangeColorset 2 20
             End
          End

          If $DeskNo == 4 Then
          Begin
             If $CurrDesk == 1 Then
             Begin
                ChangePosition 41 1 3
                ChangeColorset 1 20
             End
             If $CurrDesk == 2 Then
             Begin
                ChangePosition 41 130 3
                ChangeColorset 2 20
             End
             If $CurrDesk == 3 Then
             Begin
                ChangePosition 41 1 36
                ChangeColorset 3 20
             End
             If $CurrDesk == 4 Then
             Begin
                ChangePosition 41 130 36
                ChangeColorset 4 20
             End
          End

          If $DeskNo == 6 Then
          Begin
             ChangeSize 41 82 26

             If $CurrDesk == 1 Then
             Begin
                ChangePosition 41 1 3
                ChangeColorset 1 20
             End
             If $CurrDesk == 2 Then
             Begin
                ChangePosition 41 87 3
                ChangeColorset 2 20
             End
             If $CurrDesk == 3 Then
             Begin
                ChangePosition 41 173 3
                ChangeColorset 3 20
             End
             If $CurrDesk == 4 Then
             Begin
                ChangePosition 41 1 36
                ChangeColorset 4 20
             End
             If $CurrDesk == 5 Then
             Begin
                ChangePosition 41 87 36
                ChangeColorset 5 20
             End
             If $CurrDesk == 6 Then
             Begin
                ChangePosition 41 173 36
                ChangeColorset 6 20
             End
          End

          If $DeskNo == 8 Then
          Begin
             ChangeSize 41 60 26

             If $CurrDesk == 1 Then
             Begin
                ChangePosition 41 1 3
                ChangeColorset 1 20
             End
             If $CurrDesk == 2 Then
             Begin
                ChangePosition 41 65 3
                ChangeColorset 2 20
             End
             If $CurrDesk == 3 Then
             Begin
                ChangePosition 41 130 3
                ChangeColorset 3 20
             End
             If $CurrDesk == 4 Then
             Begin
                ChangePosition 41 194 3
                ChangeColorset 4 20
             End
             If $CurrDesk == 5 Then
             Begin
                ChangePosition 41 1 36
                ChangeColorset 5 20
             End
             If $CurrDesk == 6 Then
             Begin
                ChangePosition 41 65 36
                ChangeColorset 6 20
             End
             If $CurrDesk == 7 Then
             Begin
                ChangePosition 41 130 36
                ChangeColorset 7 20
             End
             If $CurrDesk == 8 Then
             Begin
                ChangePosition 41 194 36
                ChangeColorset 8 20
             End
          End

          ShowWidget 41
       End

       3 :
       Begin
          If (GetTitle 41) <> {} Then
          Begin
             Set $NewButtonLabelOut = {echo '} (GetTitle 41) {' | sed 's/://g; s/|//g; s/\$//' | tr -d '[:cntrl:]'; echo -ne "\n"}
             Set $NewButtonLabel = (GetOutput $NewButtonLabelOut 1 -1)
             If $CreateUserConfig == 1 Then
             Begin
                Do {Exec exec sed 's/^WSP:} $CurrDesk {:.*/WSP:} $CurrDesk {:} $NewButtonLabel {/g' < } $ConfFile { > $FVWM_USERDIR/WSM.conf}
                Set $ConfFile = {$FVWM_USERDIR/WSM.conf}
                Set $ShiftNewLabel = { } $NewButtonLabel
                ChangeTitle $CurrDesk $ShiftNewLabel

                If $CurrDesk == 1 Then
                   ChangeColorset $CurrDesk 41
                If $CurrDesk == 2 Then
                   ChangeColorset $CurrDesk 43
                If $CurrDesk == 3 Then
                   ChangeColorset $CurrDesk 45
                If $CurrDesk == 4 Then
                   ChangeColorset $CurrDesk 47
                If $CurrDesk == 5 Then
                   ChangeColorset $CurrDesk 41
                If $CurrDesk == 6 Then
                   ChangeColorset $CurrDesk 43
                If $CurrDesk == 7 Then
                   ChangeColorset $CurrDesk 45
                If $CurrDesk == 8 Then
                   ChangeColorset $CurrDesk 47

                ChangeTitle 41 {}
             End
             Else
             Begin
                Do {Exec exec $[NSCDE_ROOT]/bin/ised -c 's/^WSP:} $CurrDesk {:.*/WSP:} $CurrDesk {:} $NewButtonLabel {/g' -f } $ConfFile
                Set $ShiftNewLabel = { } $NewButtonLabel
                ChangeTitle $CurrDesk $ShiftNewLabel

                If $CurrDesk == 1 Then
                   ChangeColorset $CurrDesk 41
                If $CurrDesk == 2 Then
                   ChangeColorset $CurrDesk 43
                If $CurrDesk == 3 Then
                   ChangeColorset $CurrDesk 45
                If $CurrDesk == 4 Then
                   ChangeColorset $CurrDesk 47
                If $CurrDesk == 5 Then
                   ChangeColorset $CurrDesk 41
                If $CurrDesk == 6 Then
                   ChangeColorset $CurrDesk 43
                If $CurrDesk == 7 Then
                   ChangeColorset $CurrDesk 45
                If $CurrDesk == 8 Then
                   ChangeColorset $CurrDesk 47

                ChangeTitle 41 {}
             End
          End

          HideWidget 41
       End

       4 :
       Begin
          Set $NextDesk = (Add (StrCopy (LastString) 3 99) -1)
          Set $Action = (Add (StrCopy (LastString) 1 2) -1)
          If $Action == 1 Then
             Begin
                Do {f_MoveCursorAndExec 0 -15 f_ShowGlobalPager}
             End
          If $Action == 2 Then
             Begin
                Do {f_MoveCursorAndExec 0 -10 Module FvwmPager -transient WspLocPager } $NextDesk { } $NextDesk
             End
          If $Action == 3 Then
             # $CurrDesk is 1-based; $NextDesk is 0-based
             Do {WindowList NoGeometry TitleForAllDesks NoCurrentDeskTitle NoNumInDeskTitle ShowPage Desk } $NextDesk
             If (Add $NextDesk 1) == $CurrDesk Then
             Begin
                If $CurrDesk == 1 Then
                   ChangeColorset $CurrDesk 41
                If $CurrDesk == 2 Then
                   ChangeColorset $CurrDesk 43
                If $CurrDesk == 3 Then
                   ChangeColorset $CurrDesk 45
                If $CurrDesk == 4 Then
                   ChangeColorset $CurrDesk 47
                If $CurrDesk == 5 Then
                   ChangeColorset $CurrDesk 41
                If $CurrDesk == 6 Then
                   ChangeColorset $CurrDesk 43
                If $CurrDesk == 7 Then
                   ChangeColorset $CurrDesk 45
                If $CurrDesk == 8 Then
                   ChangeColorset $CurrDesk 47

                ChangeValue (Add $NextDesk 1) 1
             End
          If $Action == 4 Then
          Begin
             Do {DestroyMenu m_GoToPage}
             Do {AddToMenu m_GoToPage}
             For $p = 1 To $PageNo Do
             Begin
                Set $pgaddr = (GetOutput $ParsePg $p 3)
                Set $pgX = (StrCopy $pgaddr 1 1)
                Set $pgY = (StrCopy $pgaddr 2 2)
                Set $pgline = (GetOutput $ParsePg $p -1)
                Set $pgdescout = {echo } $pgline { | cut -d" " -f 4-32}
                Set $pgdesc = (GetOutput  $pgdescout 1 -1)
                If $pgdesc == {} Then
                Begin
                   If $p > 1 Then
                      Do {+ "" Nop}
                      Do {+ "Go to page &} $p {" GotoDeskAndPage 0} $NextDesk { } $pgX { } $pgY
                End
                Else
                Begin
                   If $p > 1 Then
                      Do {+ "" Nop}
                      Do {+ "&} $p {  } $pgdesc {" GotoDeskAndPage 0} $NextDesk { } $pgX { } $pgY
                End
             End
             Do {Menu m_GoToPage}
          End
       End
End

Widget 42
 Property
 Size 0 0
 Position 90 6
 Type ItemDraw
 Flags NoReliefString NoFocus
 Title {}
 Icon NsCDE/WsmABCD.xpm
 Colorset 52
    Main
       Case message of
       SingleClic :
       Begin
          Do {f_MoveCursorAndExec 0 -8 Module FvwmPager -transient WspLocPager}
       End
End
