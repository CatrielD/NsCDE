WindowTitle {Style Manager - Keyboard}
WindowSize 460 350
Colorset 22

Init
Begin
   Set $genfile= (GetOutput {sh -c "echo $FVWM_USERDIR/Xset.conf"} -1 1)
   Set $FILE = $genfile

   ChangeValue 9 (GetOutput  {xset -q | egrep 'auto repeat:' } 0 7)
   If (GetOutput  {xset -q | egrep 'auto repeat:' } 0 3)==on Then
   Begin
      ChangeValue 3 1
   End
   ChangeValue 5 (GetOutput  {xset -q | egrep 'auto repeat delay:' } 0 4)
   ChangeValue 7 (GetOutput  {xset -q | egrep 'auto repeat delay:' } 0 7)

   Set $HScrollBarFont = (GetOutput {$NSCDE_ROOT/bin/getfont -v -t normal -s small} 1 -1)
   ChangeFont 5 $HScrollBarFont
   ChangeFont 7 $HScrollBarFont
   ChangeFont 9 $HScrollBarFont
End

Widget 1
Property
   Position 10 4
   Flags NoReliefString NoFocus
   Type ItemDraw
   Title {}
   Icon CDE/DtKeybd.l.pm
   Main
      Case message of
      SingleClic :
      Begin
      End
End

Widget 2
Property
   Size 100 0
   Position 352 8
   Flags NoReliefString
   Type PushButton
   Title {Default}
   Main
      Case message of
      SingleClic :
      Begin
         Do {Exec xset r on r rate 512 16 c 50}
         ChangeValue 3 1
         ChangeValue 5 512
         ChangeValue 7 16
         ChangeValue 9 50
         ShowWidget 4
         ShowWidget 5
         ShowWidget 6
         ShowWidget 7
         WarpPointer 12
      End
End

Widget 3
   Property
   Position 10 68
   Flags NoReliefString
   Type CheckBox
   Title { Auto Repeat}
   Main
      Case message of
      SingleClic :
      Begin
         If (GetValue 3) == 0 Then
         Begin
            HideWidget 4
            HideWidget 5
            HideWidget 6
            HideWidget 7
         End
         Else
         Begin
            ShowWidget 4
            ShowWidget 5
            ShowWidget 6
            ShowWidget 7
         End
      End
End

